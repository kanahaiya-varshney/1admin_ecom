<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:elevation="7dp"
    android:orientation="vertical"
    app:cardCornerRadius="20sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF7EE"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gabriola"
            android:text="Customer Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/customer_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gabriola"
            android:padding="5dp"
            android:text="Customer Address"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/customer_ph_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gabriola"
            android:padding="5dp"
            android:text="Customer Phone Number"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/customer_view_order_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/curve_yellow_btn"
            android:fontFamily="@font/gabriola"
            android:text="View Order Details"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>